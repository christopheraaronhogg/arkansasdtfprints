modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "gce"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--timeout", "1200", "--limit-request-line", "0", "--limit-request-field_size", "0", "main:app"]

[http]
proxyBodySize = "512m"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34899
externalPort = 3000

[objectStorage]
defaultBucketID = "replit-objstore-975b0bd5-2ee3-448c-bdeb-ede1829b458c"
